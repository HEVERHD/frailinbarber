generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String?            @unique
  emailVerified       DateTime?
  phone               String?
  image               String?
  role                Role               @default(CLIENT)
  avatarUrl           String?
  specialty           String?
  appointments        Appointment[]
  barberAppointments  Appointment[]      @relation("BarberAppointments")
  barberSettings      BarberSettings?
  blockedSlots        BlockedSlot[]
  pushSubscriptions   PushSubscription[]
  accounts            Account[]
  sessions            Session[]
  createdAt           DateTime           @default(now())
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  @@index([userId])
}

enum Role {
  ADMIN
  BARBER
  CLIENT
}

model Service {
  id           String           @id @default(cuid())
  name         String
  description  String?
  price        Float
  duration     Int              // minutes
  active       Boolean          @default(true)
  appointments Appointment[]
  waitlist     WaitlistEntry[]
  createdAt    DateTime         @default(now())
}

model Appointment {
  id        String            @id @default(cuid())
  token     String            @unique @default(cuid())
  date      DateTime
  status    AppointmentStatus @default(PENDING)
  notes     String?
  bookedBy  BookedBy
  notified      Boolean       @default(false)
  reminded24h   Boolean       @default(false)
  userId    String
  user      User              @relation(fields: [userId], references: [id])
  serviceId String
  service   Service           @relation(fields: [serviceId], references: [id])
  barberId  String
  barber    User              @relation("BarberAppointments", fields: [barberId], references: [id])
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@index([date])
  @@index([status])
  @@index([barberId])
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum BookedBy {
  CLIENT
  BARBER
}

model BarberSettings {
  id            String  @id @default(cuid())
  shopName      String  @default("Mi Barber√≠a")
  openTime      String  @default("09:00")
  closeTime     String  @default("19:00")
  slotDuration  Int     @default(30)
  daysOff       String  @default("0")
  daySchedules  String? // JSON: {"0":{"open":"09:00","close":"18:00"},...} - per-day overrides
  address       String? // Physical address for the "Como llegar" section
  phone         String?
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id])
}

model BlockedSlot {
  id        String   @id @default(cuid())
  date      String               // YYYY-MM-DD
  startTime String               // HH:mm
  endTime   String               // HH:mm
  reason    String?
  allDay    Boolean  @default(false)
  barberId  String
  barber    User     @relation(fields: [barberId], references: [id])
  createdAt DateTime @default(now())

  @@index([date])
  @@index([barberId])
}

model GalleryItem {
  id          String   @id @default(cuid())
  imageUrl    String
  title       String?
  description String?
  category    String   @default("corte")
  orderIndex  Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model WaitlistEntry {
  id        String         @id @default(cuid())
  date      String         // YYYY-MM-DD
  name      String
  phone     String
  serviceId String
  service   Service        @relation(fields: [serviceId], references: [id])
  status    WaitlistStatus @default(WAITING)
  notified  Boolean        @default(false)
  createdAt DateTime       @default(now())

  @@index([date, status])
}

enum WaitlistStatus {
  WAITING
  NOTIFIED
  BOOKED
  EXPIRED
}
